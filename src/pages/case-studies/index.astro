---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const studies = [
  {
    number: '01',
    title: 'BadgerCoin Marketing Site — Experimental Rebuild',
    excerpt: 'From-scratch redesign and build using Astro islands, React 19, Tailwind 4, motion, maps, and selective 3D. Focused on performance, trust, and maintainability.',
    tags: ['Astro', 'React', 'TypeScript', 'Tailwind', 'Framer Motion', 'Leaflet', 'Three.js'],
    link: '/case-studies/badgercoin-marketingsite-experimental',
    color: 'from-amber-500 to-orange-600'
  },
  {
    number: '02',
    title: 'BadgerCoin Marketing Analytics & Multi-Touch Attribution',
    excerpt: 'Enterprise-level marketing attribution system with sophisticated multi-touch attribution models, transaction tracking, and comprehensive admin dashboard featuring advanced re-attribution logic and revenue tracking.',
    tags: ['Laravel', 'React', 'TypeScript', 'MySQL', 'Chakra UI', 'Chart.js'],
    link: '/case-studies/badgercoin-marketing-attribution',
    color: 'from-purple-500 to-pink-600'
  },
  {
    number: '03',
    title: 'SurveyHorizon E-commerce Platform',
    excerpt: 'Leading developer for a comprehensive React-based geospatial technology e-commerce platform serving surveying professionals across Canada with advanced product management and AI-powered features.',
    tags: ['React', 'TypeScript', 'Tailwind', 'Supabase', 'Vercel'],
    link: '/case-studies/survey-horizon',
    color: 'from-blue-500 to-cyan-600'
  },
  {
    number: '04',
    title: 'Wellness Together Canada',
    excerpt: 'A comprehensive Flutter-based mental health platform serving 200k+ users nationwide with mood tracking, self-assessments, and wellness tools.',
    tags: ['Flutter', 'Django REST', 'Firebase', 'Astro'],
    link: '/case-studies/wellness-together-canada',
    color: 'from-green-400 to-blue-600'
  },
  {
    number: '05',
    title: 'Winston UTrack - React Native Mobile App',
    excerpt: 'Lead Developer for Winston UTrack, an educational workshop management application successfully deployed on Google Play Store and Apple App Store, supporting 130+ student sign-ups on launch day.',
    tags: ['React Native', 'Redux', 'PostgreSQL', 'Rails'],
    link: '/case-studies/winston-utrack',
    color: 'from-indigo-500 to-purple-600'
  }
];
---

<Layout title="Case Studies - Buyun Wang">
  <Navigation />
  <main class="pt-32 pb-24 px-8 min-h-screen">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <a href="/" class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-900 mb-6 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Home
        </a>
        <h1 class="text-5xl font-bold mb-3">Case Studies</h1>
        <p class="text-xl text-gray-600">Selected work with details on design thinking, engineering, and results.</p>
      </div>

      <div class="grid gap-8 md:grid-cols-2">
        {studies.map((s) => (
          <a href={s.link} class="group relative bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all overflow-hidden flex flex-col min-h-[340px]">
            <!-- Background Gradient on Hover -->
            <div class={`absolute inset-0 bg-gradient-to-br ${s.color} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>
            
            <!-- Content -->
            <div class="relative z-10 flex flex-col flex-1">
              <span class="text-5xl font-bold text-gray-200 mb-4 block">{s.number}</span>
              
              <h2 class="text-2xl font-semibold mb-3 group-hover:text-gray-700 transition-colors">{s.title}</h2>
              <p class="text-gray-600 mb-4 flex-1">{s.excerpt}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {s.tags.map((t) => <span class="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded-md">{t}</span>)}
              </div>
              <span class="text-sm font-medium text-gray-900">Read case study →</span>
            </div>
            
            <!-- Arrow Icon -->
            <div class="absolute bottom-8 right-8 transform translate-x-2 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
