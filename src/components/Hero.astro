<section class="min-h-screen flex items-center justify-center px-4 sm:px-6 md:px-8 py-20 sm:py-24 md:py-8 relative gradient-overlay">
  <div class="max-w-4xl w-full animate-fade-in mt-8 sm:mt-0">
    <!-- Status Badge -->
    <div class="mb-6 sm:mb-8 md:mb-12">
      <div class="inline-block">
        <span class="inline-flex items-center gap-2 px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-900 text-white rounded-full text-xs sm:text-sm">
          <span class="relative flex h-2 w-2 flex-shrink-0">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
          </span>
          <span class="whitespace-nowrap">wee update</span>
        </span>
        <p class="mt-2 sm:mt-3 text-gray-600 text-xs sm:text-sm">
          Working on crypto exchange and<br class="sm:hidden" /> ecommerce platform.
        </p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="space-y-6 sm:space-y-8">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
        Hello, I'm Buyun.<br />
        Step inside.
      </h1>
      
      <div class="space-y-4 text-base sm:text-lg text-gray-700 max-w-2xl">
        <p>
          Experienced in building scalable web and mobile applications, 
          working with modern frameworks, and creating delightful user experiences.
        </p>
        
        <p>
          I value <span class="font-semibold">clarity</span>, 
          <span class="font-semibold">simplicity</span>, and 
          <span class="font-semibold">performance</span> above all else. 
          These ideals guide my approach to problem solving and development.
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-2 sm:pt-4">
        <a 
          href="#work" 
          class="px-5 sm:px-6 py-2.5 sm:py-3 bg-gray-900 text-white rounded-lg font-medium hover:bg-gray-800 transition-colors text-center"
        >
          View Work
        </a>
        <a 
          href="/about" 
          class="px-5 sm:px-6 py-2.5 sm:py-3 border border-gray-900 text-gray-900 rounded-lg font-medium hover:bg-gray-100 transition-colors text-center"
        >
          About Me
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>
